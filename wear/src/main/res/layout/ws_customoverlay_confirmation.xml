<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wearable_support_overlay_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="PrivateResource">

    <ImageView
        android:id="@+id/wearable_support_confirmation_overlay_image"
        android:layout_width="@dimen/confirmation_overlay_image_size"
        android:layout_height="@dimen/confirmation_overlay_image_size"
        android:layout_marginBottom="@dimen/confirmation_overlay_image_bottom_margin"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_phonelink_erase_white_24dp" />

    <TextView
        android:id="@+id/wearable_support_confirmation_overlay_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/confirmation_overlay_text_bottom_margin"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-medium"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:importantForAccessibility="no"
        android:letterSpacing="@dimen/confirmation_overlay_text_letter_spacing"
        android:paddingStart="@dimen/inner_layout_padding"
        android:paddingEnd="@dimen/inner_layout_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/confirmation_overlay_text_size"
        tools:text="Hello" />

</LinearLayout>
